{% extends 'base.html.twig' %}

{% block title %}
    {{ 'title.login'|trans }}
{% endblock title %}

{% block body %}
<div class="container mt-4">
{% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey | trans(error.messagedata, 'security') }}
        </div>
    {% endif %}
    
<h1>Connexion</h1>

    <form action="{{ path('connexion') }}" method="post">
        {# <div class="form-group">
            <label for="username">Nom d'utilisateur</label>
            <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}">
        </div> #}
        <div class="form-group">
            <label for="email">{{ 'form.login.username.label'|trans }}</label>
            <input type="text" id="email" name="_username" placeholder="{{ 'form.login.username.placeholder'|trans }}" class="form-control">
        </div>
        <div class="form-group">
            <label for="password">{{ 'form.login.password.label'|trans }}</label>
            <input type="password" id="password" name="_password" placeholder="{{ 'form.login.password.placeholder'|trans }}" class="form-control">
        </div>
        <div>
            <p><a  href="{{ path('app_forgotten_password') }}">{{ 'form.login.forgottenpassword'|trans }}</a></p>
        </div>
        <button type="submit" class="btn btn-primary">{{ 'form.login.button'|trans }}</button>
    </form>
</div>

{% endblock %}
