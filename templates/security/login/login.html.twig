{% extends 'base.html.twig' %}

{% block title 'Se connecter' %}

{% block body %}
<div class="container mt-4">
{% if error %}
        <div class="alert alert-danger">
            {{ error.messageKey | trans(error.messagedata, 'security') }}
        </div>
    {% endif %}
    
<h1>Connexion</h1>

    <form action="{{ path('connexion') }}" method="post">
        {# <div class="form-group">
            <label for="username">Nom d'utilisateur</label>
            <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}">
        </div> #}
        <div class="form-group">
            <label for="email">Email ou Nom d'utilisateur</label>
            <input type="text" id="email" name="_username" placeholder="Email ou Nom d'utilisateur" class="form-control">
        </div>
        <div class="form-group">
            <label for="password">Mot de passe</label>
            <input type="password" id="password" name="_password" placeholder="Mot de passe" class="form-control">
        </div>
        <div>
            <p><a  href="{{ path('app_forgotten_password') }}">Mot de passe oubli√© ?</a></p>
        </div>
        <button type="submit" class="btn btn-primary">Se connecter</button>
    </form>
</div>

{% endblock %}
