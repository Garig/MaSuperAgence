{% extends 'base.html.twig' %}
{% trans_default_domain "messages" %}

{% block title %}
    {{ 'title.index'|trans }}
{% endblock title %}

{% block body %}
<div class="jumbotron">
        <div class="container">
        {{ form_start(form) }}
        <div class="row align-items-end">
                <div class="col-md-3"><div class="form-group">{{ form_row(form.minSurface, { 'attr': {'placeholder': 'form.search.minsurface'|trans } } ) }}</div></div>
                <div class="col-md-3"><div class="form-group">{{ form_row(form.maxPrice, { 'attr': {'placeholder': 'form.search.maxprice'|trans} } ) }}</div></div>
                <div class="col-md-3"><div class="form-group">{{ form_row(form.minPiece, { 'attr': {'placeholder': 'form.search.minpiece'|trans} } ) }}</div></div>
                <div class="col-md-2"><div class="form-group">{{ form_row(form.options) }}</div></div>
        </div>
        <div class="row align-items-end">
                <div class="col-md-8"><div class="form-group"><input type="text" value="" placeholder="{{ 'form.search.address'|trans }}" id="search_adress" class="form-control"></div></div>
                <div class="col-md-2"><div class="form-group">{{ form_row(form.distance, { 'attr': {'placeholder': "{{ 'form.search.distance'|trans }}"} }) }}</div></div>
                <div class="col-md-2"><div class="form-group"><button class="btn btn-primary"><span class="glyphicon glyphicon-search"></span>{{ 'form.search.search'|trans }}</button></div></div>
        </div>
        {{ form_end(form) }}
        </div>
</div>
