{% extends 'base.html.twig' %}

{% block title 'Tous nos biens' %}

{% block body %}
<div class="jumbotron">
        <div class="container">
        {{ form_start(form) }}
        <div class="row align-items-end">
                <div class="col-md-3"><div class="form-group">{{ form_row(form.minSurface) }}</div></div>
                <div class="col-md-3"><div class="form-group">{{ form_row(form.maxPrice) }}</div></div>
                <div class="col-md-3"><div class="form-group">{{ form_row(form.minPiece) }}</div></div>
                <div class="col-md-2"><div class="form-group">{{ form_row(form.options) }}</div></div>
        </div>
        <div class="row align-items-end">
                <div class="col-md-8"><div class="form-group"><input type="text" value="" placeholder="Adresse" id="search_adress" class="form-control"></div></div>
                <div class="col-md-2"><div class="form-group">{{ form_row(form.distance) }}</div></div>
                <div class="col-md-2"><div class="form-group"><button class="btn btn-primary">Rechercher</button></div></div>
        </div>
        {{ form_end(form) }}
        </div>
</div>
<div class="container mt-4">
        <h1>Tous nos biens</h1>
        <div class="row">
                {% for property in properties %}
                        {% include 'property/_property.html.twig' %}
                {% endfor %}
        </div>
        {# display navigation #}
        <div class="navigation">
        {{ knp_pagination_render(properties) }}
        </div>
</div>

{% endblock %}
