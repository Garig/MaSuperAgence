{% extends 'base.html.twig' %}
 
{% trans_default_domain "messages" %}

{% block title %}
    {{ 'page.forgottenpassword.title'|trans }}
{% endblock title %}
 
{% block body %}
<div class="container mt-4">

    <h1>{{ 'page.forgottenpassword.title'|trans }}</h1>
    <p>{{ 'page.forgottenpassword.intro'|trans }}</p>
    <form action="{{ path('app_forgotten_password') }}" method="post">

        <div class="form-group">
            <label for="email">Email</label>
            <input type="text" id="email" name="_username" placeholder="Email" class="form-control" required autofocus>
        </div>
 
        <button class="btn btn-primary" type="submit">{{ 'page.forgottenpassword.button'|trans }}</button>
 
    </form>
</div>
{% endblock %}